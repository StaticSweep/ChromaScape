<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="com.chromascape.web.logs">
    <Appenders>
        <!-- Console appender for standard output -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- Custom WebSocket appender -->
        <WebSocketLogAppender name="WebSocket"/>
    </Appenders>

    <Loggers>
        <!-- Root logger sends logs to both console and WebSocket -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="WebSocket"/>
        </Root>
    </Loggers>
</Configuration>